<div class="quiz" style="padding:50px">

  <h2 class="title is-2 has-text-centered">{{quiz.title}}</h2>

  <div style="margin:20px 0;display:flex;justify-content:center;">
    <span class="tag is-primary has-text-weight-bold">{{quiz.subject}}</span>
  </div>

  <div
    style="display:flex;justify-content:space-between;align-items:center;margin:40px 0;"
  >
    <div class="quiz__stats">Question</div>

    <div class="quiz__time" style="width:10%;text-align:center;"></div>
  </div>

  <div class="quiz__question-container">

  </div>
  <div class="buttons" style="display:flex;justify-content:center;">
    <button class="button is-primary is-medium quiz__prev-button">
      Previous</button>
    <button class="button is-primary is-medium quiz__next-button">
      Next</button>
    <button class="button is-primary is-medium quiz__go-to-question__button">
      Go to question</button>
    <button
      class="button is-primary is-medium quiz__next-button quiz__submit-button"
    >
      Submit</button>

  </div>

  <div class="quiz__go-to-question__container"></div>

  <div class="quiz__camera">
    <canvas
      class="quiz__camera__output-video"
      width="300px"
      height="168.7"
    ></canvas>
    <video autoplay="true" class="quiz__camera__input-video" style="display:none;"></video>
  </div>

  <div class="modal quiz__go-to-question__modal">
    <div class="modal-background"></div>
    <div class="modal-card">
      <header class="modal-card-head">
        <p class="modal-card-title">Go To Question</p>
        <button
          class="delete quiz__go-to-question__modal__close"
          aria-label="close"
        ></button>
      </header>
      <section class="modal-card-body quiz__go-to-question__modal__content">
        <!-- Content ... -->
      </section>
      <footer class="modal-card-foot">

      </footer>
    </div>
  </div>
</div>

