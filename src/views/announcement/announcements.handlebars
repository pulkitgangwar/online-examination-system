<div class="is-flex" style="justify-content:space-between;margin-bottom:16px;">

  <h1 class="title is-1">Announcements</h1>
  <a href="/announcement/add" class="button is-primary is-medium">
    <i class="fa-solid fa-plus"></i>
    Add Announcement
  </a>
</div>

<div>
  {{#each announcements}}
    <div class="card" style="margin-bottom:12px;">
      <div class="card-content">
        <div class="content">
          <p style="font-size:24px;">
            {{this.description}}
          </p>

          <div style="display:flex;justify-content:space-between;">
            <div>

              <time
                style="font-size:16px;font-weight:bold;"
                datetime="2016-1-1"
              >{{this.createdAt}}</time>

              <span class="tag is-primary is-size-6">Semester
                {{this.semester}}</span>
            </div>
            <span class="tag is-black is-size-6">{{this.user.name}}</span>
          </div>

        </div>
      </div>
      <footer class="card-footer">
        {{#if isEditable}}
          <a
            href="/announcement/edit/{{this.id}}"
            class="card-footer-item"
          >Edit</a>
        {{/if}}
      </footer>
    </div>
  {{/each}}
</div>