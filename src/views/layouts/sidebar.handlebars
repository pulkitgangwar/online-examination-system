<meta name="theme-color" content="#ffffff">
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://unpkg.com/bulma@0.9.0/css/bulma.min.css"
    />

    <link rel="stylesheet" href="/styles/sidebar.css" />
  </head>
  <body>

    <div
      class="main"
      style="font-family:'nunito sans';position:relative;height:100vh;display:flex;"
    >
      <div class="main__container sidebar">
        <div class="sidebar__container">
          <a href="/" class="sidebar__logo">
            <img src="/assets/svg.svg" width="150px"/>
          </a>

          <div class="sidebar__menu">
            {{#if isTeacher}}
              <a href="/users/student" class="sidebar__menu__item">
                <div><i class="fa-solid fa-user-gear"></i></div>
                <div><p>Students</p></div>
              </a>
              <a href="/users/teacher" class="sidebar__menu__item">
                <div><i class="fa-solid fa-user-gear"></i></div>
                <div><p>Teachers</p></div>
              </a>
              <a href="/users/registration" class="sidebar__menu__item">
                <div><i class="fa-solid fa-users"></i></div>
                <div><p>Registrations</p></div>
              </a>
              <a href="/quiz" class="sidebar__menu__item">
                <div><i class="fa-solid fa-book-open-reader"></i></div>
                <div><p>Exams</p></div>
              </a>
              <a href="/announcement" class="sidebar__menu__item">
                <div><i class="fa-solid fa-circle-exclamation"></i></div>
                <div><p>Announcements</p></div>
              </a>
              <a href="/settings" class="sidebar__menu__item">
                <div>
                <i class="fa-sharp fa-solid fa-gear"></i>
                </div>
                <div><p>Settings</p></div>
              </a>
              <a href="/home/profile" class="sidebar__menu__item">
                <div><i class="fa-solid fa-user"></i></div>
                <div><p>Profile</p></div>
              </a>

            {{else}}
              <a href="/home" class="sidebar__menu__item">
                <div><i class="fa-solid fa-house"></i></div>
                <div><p>Home</p></div>
              </a>
              <a href="/home/reports" class="sidebar__menu__item">
                <div><i class="fa-solid fa-file"></i></div>
                <div><p>Reports</p></div>
              </a>
             <a href="/home/announcement" class="sidebar__menu__item">
                <div><i class="fa-solid fa-circle-exclamation"></i></div>
                <div><p>Announcements</p></div>
              </a> 

              <a href="/home/profile" class="sidebar__menu__item">
                <div><i class="fa-solid fa-user"></i></div>
                <div><p>Profile</p></div>
              </a>

            {{/if}}
          </div>

        </div>
      </div>
      <div
        style="flex:1;overflow-y:scroll;padding:24px;"
        class="main__container"
      >
        <div>
          {{#if isBackButtonAvailable}}
             {{> back}} 
          {{/if}}
          {{{body}}}
        </div>
      </div>
    </div>

    <script
      src="https://kit.fontawesome.com/d4109a6bf5.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

  </body>
</html>